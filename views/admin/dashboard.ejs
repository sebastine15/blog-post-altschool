<div class="admin-title">
  <h2>Articles</h2>


<% if (successMessage) { %>
  <div class="alert-success">
    <%= successMessage %>
  </div>
<% } %>

<% if (errorMessage) { %>
  <div class="alert-danger">
    <%= errorMessage %>
  </div>
<% } %>


  <a href="/add-article" class="button">+ Add New</a>
</div>

<ul class="admin-posts">

  <% articles.forEach(article => { %>
   
    <li>
      <a href="/view/<%= article._id %>" style="text-decoration: none;">
        <%= article.title %> &nearr;
      </a>
      <div class="admin-post-controls">
        <a href="/edit-article/<%= article._id %>" class="btn">Edit</a>
        <a href="/publish-article/<%= article._id %>" class="btn">Publish</a>

        <form action="/delete-article/<%= article._id %>?_method=DELETE" method="POST">
          <input type="submit" value="Delete" class="btn-delete btn">
        </form>

      </div>

    </li>

  <% }) %>
</ul>

 <div class="pagination__container">
    
  <% if (prevPage !== null) { %>
    <a href="/dashboard/?page=<%= prevPage %>" class="pagination">View Newer Articles &gt;</a>
  <% } %>
    <% if (nextPage !== null) { %>
   <a href="/dashboard/?page=<%= nextPage %>" class="pagination">&lt; View Older Articles</a>
  <% } %>

  </div>